<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix Movies</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
        integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">

    <link rel="stylesheet" href="./css/styles.css">
</head>

<body>
    <% currentPage=movies.page %>
        <nav>
            <a href="/logout" style="color: aliceblue;">Sign-out</a>
            <input name="search_show" id="input" placeholder="Start typing to search shows">
            <input name="page_number" placeholder="pg=1" id="input">
        </nav>

        <div class="container-fluid">
            <div class="row movies">
                <% movies.tv_shows.forEach(show=> { %>
                    <%let movie=show %>
                        <div class=" col  ">
                            <a href="/movie?id=<%= movie.id %>">
                                <img src="<%= movie.image_thumbnail_path %> " alt="picture of <%= movie.name %>">
                                <div class="brief">
                                    <h2>
                                        <%= movie.name %>
                                    </h2>
                                    <h4>Country: <%= movie.country %>
                                    </h4>
                                    <h4>Network: <%= movie.network %>
                                    </h4>
                                </div>
                            </a>
                        </div>
                        <% }) %>
            </div>

            <div id="search-results" style="display: none;">
                <h2 class="fs-2 text-center">Searching....</h2>
            </div>


            <div class="page-controls">
                <button class="btn btn-outline-primary"><a href="/?page=<%= currentPage - 1 %>">Prev</a></button>
                <button class="btn btn-outline-primary"><a href="/?page=<%= currentPage + 1 %>">Next</a></button>
            </div>
        </div>

        
            
<script src="./script/movies.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
            integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
            crossorigin="anonymous"></script>
</body>

</html>